<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainActivity"
    android:orientation="vertical"
    tools:context="project.senior.com.firebaselottery.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="fill"
            android:background="@color/colorPrimary" />

    </android.support.design.widget.AppBarLayout>

    <project.senior.com.firebaselottery.Activities.Fragment.ViewPager.CustomViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_sim"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:text="@string/btn_mode_simulation"
                android:background="@color/colorPrimary"
                android:layout_marginEnd="5dp"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/btn_pur"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:text="@string/btn_mode_purchase"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
